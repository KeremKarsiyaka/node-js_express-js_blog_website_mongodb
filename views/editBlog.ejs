<div class="container my-5">
	<h3>Compose Your Blog Here...</h3>
	<br><br>
	<form action="/edit/<%= blog._id %>" method="POST">
		<input type="text" value="<%= blog.title %>" name="title" class="form-control" placeholder="Enter Title" required>
		<textarea name="content" cols="30" rows="10" class="form-control my-5" placeholder="Enter Content Here..." required><%= blog.content %></textarea>
		<input type="submit" class="btn btn-md btn-danger" value="Save Shanges">
	</form>
</div>

